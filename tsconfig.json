{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
  },
  "include": ["src/**/*", "spec/**/*", "customMatchers.d.ts"],
  "exclude": ["node_modules", "dist"]
}